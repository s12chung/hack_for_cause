<li class="pledge" style='display:block'>
  <div id="pledge">
    <%= form_for @pledge, :remote => true, :method => :post do |f| %>
        <%= f.hidden_field :lat, :value => "10.12312" %>
        <%= f.hidden_field :long, :value => "45.3234" %>

        <%= f.hidden_field :charity_name, :value => "Free The Children" %>
        <%= f.hidden_field :charity_text, :value => "The text" %>
        <%= f.hidden_field :time, :value => "1324324" %>

		<div class="above-form">
			<p>Your donation will help young people achieve their fullest potential as agents of change.</p>
			<img src="/images/free_the_children.png" id="ftc" />
		</div>

        <div class="form_fields">
          <div>Your name</div>
          <%= f.text_field :full_name %>

          <div>Email</div>
          <%= f.text_field :email %>

          <div>Amount</div>
          <%= f.text_field :amount %>
        </div>

        <div class="submit" id="pledge-submit">Pledge</div>
    <% end %>
  </div>
</li>